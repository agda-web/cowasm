#!/usr/bin/env bash
set -ev

TARGET=$1
shift
ROOTDIR=`pwd`

for PACKAGE in $*
do
    cd "$ROOTDIR/$PACKAGE"
    echo $PACKAGE
    if [ $TARGET = "all" ]; then
        make
    else
        make $TARGET
    fi
done

set +v

echo $*
echo "##########################################################"
echo "#                                                        #"
echo "#   CONGRATULATIONS -- $TARGET WORKED"
echo "#                                                        #"
echo "#   `date`"
echo "#   `uname -s -m`"
echo "#   Git Branch: `git rev-parse --abbrev-ref HEAD`"
echo "#                                                        #"
echo "##########################################################"
