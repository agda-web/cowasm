{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "incremental": true,
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
